<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="controls_menu_style">
        <item name="android:background">#CC000000</item>
        <item name="orientation">vertical</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:weightSum">4</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <style name="controls_button_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    
    <!-- Settings About -->
    <style name="about_settings_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>
    <style name="about_settings_header_style" parent="@style/about_settings_text_style">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- VN Dialog Settings -->
    <style name="dialog_settings_row_style">
        <item name="android:weightSum">10</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="dialog_settings_row_description_style">
        <item name="android:layout_weight">4</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="dialog_settings_row_view_style">
        <item name="android:layout_weight">6</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
</resources>
